@page "/"

<PageTitle>NİLAYIM</PageTitle>

<h1>SENİ ÜZDÜYSEM ÖZÜR DİLERİM AŞKIM,BENİ AFFEDERMİSİN???</h1>

<hr />
<style>
    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        min-width: 100%;
        min-height: 100%;
        z-index: -1;
        overflow: hidden;
    }

        .video-background video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .icerik {
        position: relative;
        z-index: 1;
        color: white;
        text-align: center;
        padding-top: 20vh;
    }
</style>

<button class="btn btn-success" @onclick="ShowVideo1">AFFETİM AŞKIM</button>
<button class="btn btn-warning" @onclick="ShowVideo2">YOK ETMİYOM BOK YE</button>

@code {
    bool gosterButton = true;
    bool videoGoster = false;

    void ButonaTikla()
    {
        gosterButton = false;   // Buton kaybolur
        videoGoster = true;     // Başka içerik gösterilir (isteğe bağlı)
    }
}
@if (showVideo1)
{
    <div class="video-wrapper">
        <video autoplay muted controls>
            <source src="videos/Download (31).mp4" type="video/mp4" />
            Tarayıcınız video1'i desteklemiyor.
        </video>
    </div>
}

@if (showVideo2)
{
    <div class="video-wrapper">
        <video autoplay muted controls>
            <source src="videos/AĞLAYANKEDİ.mp4" type="video/mp4" />
            Tarayıcınız video2'yi desteklemiyor.
        </video>
    </div>
}

<style>
.video-wrapper {
    margin-top: 20px;
    border: 2px solid white;
}
video {
    width: 100%;
    max-width: 600px;
    height: auto;
}
</style>

@code {
    bool showVideo1 = false;
    bool showVideo2 = false;

    void ShowVideo1()
    {
        showVideo1 = true;
        showVideo2 = false; // Diğerini kapatmak istersen
    }

    void ShowVideo2()
    {
        showVideo2 = true;
        showVideo1 = false;
    }
}
@if (!yaziGoster)
{
    <button class ="btn btn-danger" @onclick ="YaziyiAc">HAYIR!!!!</button>
}
else
{
    <div class="sekme">
        <div class="sekme-baslik">
            <span>Bilgilendirme</span>
            <button class="kapat" @onclick="YaziyiKapat">X</button>
        </div>
        <div class="sekme-icerik">
            BEN SANA HAYIR DEME İZNİ VERMEDİM YALNIZ!!!!!
        </div>
    </div>
}

<style>
    .sekme {
        border: 2px solid #444;
        border-radius: 8px;
        width: 400px;
        background-color: #222;
        color: white;
        font-family: sans-serif;
        box-shadow: 0 0 12px rgba(0,0,0,0.5);
        margin-top: 20px;
    }

    .sekme-baslik {
        background-color: #333;
        padding: 10px;
        display: flex;
        justify-content: space-between;
        font-weight: bold;
        border-bottom: 1px solid #555;
    }

    .kapat {
        background: transparent;
        border: none;
        color: white;
        font-size: 18px;
        cursor: pointer;
    }

    .sekme-icerik {
        padding: 15px;
    }
</style>

@code {
    bool yaziGoster = false;

    void YaziyiAc()
    {
        yaziGoster = true;
    }

    void YaziyiKapat()
    {
        yaziGoster = false;
    }
}
<div class="video-background">
    <video autoplay muted loop playsinline>
        <source src="videos/background.mp4" type="video/mp4" />
        Tarayıcınız video etiketini desteklemiyor.
    </video>
</div>
